<%- include("header") -%> 

<div class="box" id="heading">
    <h1><%=listTitle %> </h1>
  </div>
  <div class="box">
  
    <% itemsOutput.forEach(function(item){ %>
      <form action="<%= formPathDelete %>" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()">
          <p><%=item.name %></p>
        </div>
      </form>
	<% }) %> 
      <form class="item" action="<%= formPathInsert %>" method="post">
        <input type="text" name="item" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
      </form>
  </div>
  
<%- include("footer") -%> 
